@model PedeRoca.Models.Entities.ItemDoCarrinho

@{
    ViewData["Title"] = "EditarItemCarrinho";
}

<h1 class="titulo_Table">Alterar Quantidade</h1>

<div class="formatacaoTabelas text-center">
    <div class="row">
        <div class="col-md-4 text-center m-auto">
            <form asp-action="EditarItemCarrinho">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label EditarItemCarrinhoQTD"></label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Alterar" class="btn btn_AlterarQTD" asp-route-id="@ViewData["Id"]" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
