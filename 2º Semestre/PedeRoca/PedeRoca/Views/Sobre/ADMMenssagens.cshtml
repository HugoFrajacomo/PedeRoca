@model IEnumerable<PedeRoca.Models.Entities.Contato>

@{
    ViewData["Title"] = "ADMMenssagens";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}

<h1>ADMMenssagens</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Contato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conteudo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Contato)
            </td>
